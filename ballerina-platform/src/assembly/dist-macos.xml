<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>ballerina-platform-macos-${project.version}</baseDirectory>
    <id>Ballerina MacOS Distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-lib/repo/ballerinax
            </directory>
            <outputDirectory>lib/repo/ballerinax</outputDirectory>
            <fileMode>0444</fileMode>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-distributions/ballerina-tools-zip/ballerina-tools-${project.version}
            </directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>bin/ballerina.bat</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-jre-macos
            </directory>
            <outputDirectory>bre/lib/</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/broker-launcher-zip/message-broker-${ballerina.mb.version}
            </directory>
            <outputDirectory>bre/lib/message-broker</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/api-docs-ballerinax
            </directory>
            <outputDirectory>docs/api/ballerinax</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../resources/executables/macos/composer</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>../resources/executables/macos/ballerina</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>../resources/executables/macos/broker</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>lib/version.txt</source>
            <outputDirectory>lib/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>bre/lib</outputDirectory>
            <includes>
                <include>org.ballerinax.docker:docker-extension</include>
                <include>org.ballerinax.kubernetes:kubernetes-extension</include>
            </includes>
            <excludes>
                <exclude>org.ballerinax.docker:docker-extension:zip</exclude>
                <exclude>org.ballerinax.kubernetes:kubernetes-extension:zip</exclude>
            </excludes>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
