<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>ballerina-windows-${project.version}</baseDirectory>
    <id>Ballerina Windows Distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-lib/repo/ballerinax
            </directory>
            <outputDirectory>lib/repo/ballerinax</outputDirectory>
            <fileMode>0444</fileMode>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-distributions/ballerina-tools-zip/ballerina-tools-${project.version}
            </directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>bin/ballerina</exclude>
                <exclude>lib/tools/lang-server/launcher/language-server-launcher.bat</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-jre-windows
            </directory>
            <outputDirectory>bre/lib/</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/api-docs-ballerinax
            </directory>
            <outputDirectory>docs/ballerinax</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-distributions/docker-extension-examples-zip/docker-extension-examples-${project.version}
            </directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-distributions/jdbc-extension-examples-zip/jdbc-extension-examples-${project.version}
            </directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-distributions/kubernetes-extension-examples-zip/kubernetes-extension-examples-${project.version}
            </directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-distributions/awslambda-extension-examples-zip/awslambda-extension-examples-${project.version}
            </directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../resources/executables/windows/ballerina.bat</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>../resources/executables/windows/language-server-launcher.bat</source>
            <outputDirectory>lib/tools/lang-server/launcher/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>lib/version.txt</source>
            <outputDirectory>lib/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>bre/lib</outputDirectory>
            <includes>
                <include>org.ballerinax.docker:docker-extension</include>
                <include>org.ballerinax.kubernetes:kubernetes-extension</include>
                <include>org.ballerinax.jdbc:jdbc-extension</include>
                <include>org.ballerinax.awslambda:awslambda-extension</include>
            </includes>
            <excludes>
                <exclude>org.ballerinax.docker:docker-extension:zip</exclude>
                <exclude>org.ballerinax.kubernetes:kubernetes-extension:zip</exclude>
                <exclude>org.ballerinax.jdbc:jdbc-extension:zip</exclude>
                <exclude>org.ballerinax.awslambda:awslambda-extension:zip</exclude>
            </excludes>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
