<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>ballerina-tools-linux-${project.version}</baseDirectory>
    <id>Ballerina Linux Distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-distributions/ballerina-tools-zip/ballerina-tools-${project.version}
            </directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>bin/ballerina.bat</exclude>
                <exclude>bin/composer.bat</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/extracted-jre-linux
            </directory>
            <outputDirectory>bre/lib/</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>bin/composer</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>bin/ballerina</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </file>
    </files>
</assembly>
